    ViewData["Title"] = "Acesso Negado";
}

<link rel="stylesheet" href="~/css/restricao.css" asp-append-version="true" />

<div class="restricao-container">

    <!-- Card -->
    <div class="restricao-card">

        <!-- Icone -->
        <div class="restricao-icone">
            <i class="fas fa-lock"></i>
        </div>

        <!-- Corpo -->
        <h1 class="restricao-titulo">Acesso Restrito</h1>
        <p class="restricao-texto">
            Você não tem permissão para acessar esta página.
        </p>

        <!-- Voltar (Redirecionar) -->
