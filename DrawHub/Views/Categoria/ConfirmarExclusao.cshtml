@model Categoria

@{
    ViewData["Title"] = "Confirmação de Exclusão";
}

<div class="text-center">
    <h3>Realmente deseja apagar a categoria: (@Model.Nome)?</h3>
</div>

<a class="btn btn-primary w-100 mb-2 mt-2" role="button" asp-controller="Categoria" asp-action="Index">Cancelar Exclusão</a>
<a class="btn btn-danger w-100" role="button" asp-controller="Categoria" asp-route-id="@Model.Id" asp-action="Excluir">Confirmar Exclusão</a>