@model DrawHub.Models.Categoria

@{
    ViewData["Title"] = "Editar Categoria";
}

<div class="container mt-5">
    <h2 class="text-center mb-4">Editar Categoria</h2>

    <form asp-action="Editar" asp-controller="Categoria" method="post" class="border p-4 rounded bg-light shadow-sm">

        <input type="hidden" asp-for="Id" />

        <!-- Título -->
        <div class="mb-3">
            <label asp-for="Nome" class="form-label"></label>
            <input asp-for="Nome" class="form-control" placeholder="@Model.Nome" />
            @Html.ValidationMessageFor(c => c.Nome)
        </div>

        <button type="submit" class="btn btn-primary">Salvar</button>
        <a class="btn btn-secondary" asp-controller="Categoria" asp-action="Index" role="button">Voltar</a>
    </form>

</div>

@section Scripts {
    <partial name="_ValidationScriptsPartial" />
}