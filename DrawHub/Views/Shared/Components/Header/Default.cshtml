@model Usuario

<a class="navbar-brand" asp-area="" asp-controller="Home" asp-action="Index">DrawHub</a>
<button class="navbar-toggler" type="button" data-bs-toggle="collapse" data-bs-target=".navbar-collapse" aria-controls="navbarSupportedContent" aria-expanded="false" aria-label="Toggle navigation">
    <span class="navbar-toggler-icon"></span>
</button>

<div class="navbar-collapse collapse d-sm-inline-flex justify-content-between">

    <ul class="navbar-nav flex-grow-1">

        <li class="nav-item">
            <a class="nav-link text-dark" asp-area="" asp-controller="Home" asp-action="Index">Início</a>
        </li>

        <li class="nav-item">
            <a class="nav-link text-dark" asp-area="" asp-controller="Desenho" asp-action="Index">Desenhos</a>
        </li>
@if (Model != null)
{
        // Está logado
        <li class="nav-item">
                <a class="nav-link text-dark" asp-area="" asp-controller="Desenho" asp-action="Criar">Publicar</a>
        </li>

        <li class="nav-item">
            <a class="nav-link text-dark" asp-area="" asp-controller="Login" asp-action="Logout">Sair</a>
        </li>
}
else
{
        // Não está logado
        <li class="nav-item">
            <a class="nav-link text-dark" asp-area="" asp-controller="Usuario" asp-action="Cadastrar">Cadastrar</a>
        </li>

        <li class="nav-item">
            <a class="nav-link text-dark" asp-area="" asp-controller="Login" asp-action="Index">Entrar</a>
        </li>
}
    </ul>
</div>

