@model Desenho

@{
    ViewData["Title"] = "Confirmação de Exclusão";
}

<link rel="stylesheet" href="~/css/confirmacao_exclusao.css" asp-append-version="true" />

<div class="container-excluir-confirmacao">
    <div class="container">
        <div class="row justify-content-center">
            <div class="col-md-8 col-lg-6">
                <div class="card card-excluir-confirmacao">

                    <!-- Cabeçalho da Exclusão -->
                    <div class="cabecalho-excluir-confirmacao text-center">
                        <h1 class="titulo-excluir-confirmacao">
                            <i class="fas fa-exclamation-triangle icone-botao-excluir"></i>
                            Confirmar Exclusão
                        </h1>
                        <p class="subtitulo-excluir-confirmacao">Ação irreversível</p>
                    </div>

                    <!-- Corpo da Exclusão -->
                    <div class="corpo-excluir-confirmacao">
                        <div class="icone-alerta-excluir">
                            <i class="fas fa-trash-alt"></i>
                        </div>

                        <p class="mensagem-excluir-confirmacao">
                            Tem certeza que deseja excluir o desenho: (@Model.Titulo)?
                        </p>

                        <div class="item-excluir-confirmacao">
                            @Model.Titulo
                        </div>

                        <p class="descricao-excluir-confirmacao">
                            Todos os dados relacionados serão permanentemente removidos do sistema.
                        </p>

                        <!-- Botões -->
                        <div class="grupo-botoes-excluir">
                            <a class="botao-cancelar-excluir" asp-controller="Desenho" asp-action="MeusDesenhos">
                                <i class="fas fa-times icone-botao-excluir"></i>
                                Cancelar
                            </a>
                            <a class="botao-confirmar-excluir" asp-controller="Desenho" asp-route-id="@Model.Id" asp-action="Excluir">
                                <i class="fas fa-check icone-botao-excluir"></i>
                                Confirmar
                            </a>
                        </div>
                    </div>
                </div>
            </div>
        </div>
    </div>
</div>