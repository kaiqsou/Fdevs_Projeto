@model IEnumerable<DrawHub.Models.Desenho>

@{
    ViewData["Title"] = "Página Inicial";
}

<div class="row">
    @if (Model != null && Model.Any())
    {
        @foreach (var desenho in Model)
        {
            if (!desenho.Privacidade)
            {
                <div class="col-md-4 mb-4">
                    <div class="card h-100">

                        @if (!string.IsNullOrEmpty(desenho.Imagem))
                        {
                            <img src="data:image/jpeg;base64,@desenho.Imagem"
                                 class="card-img-top"
                                 alt="@desenho.Titulo"
                                 style="height: 200px;object-fit: cover;">
                        }

                        <div class="card-body">
                            <h5 class="card-title">@desenho.Titulo</h5>
                            <p class="card-text">@desenho.Descricao</p>
                            <p class="card-text">
                                <small class="text-muted">Enviado em: @desenho.DataEnvio?.ToString("dd/MM/yyyy")</small>
                                @if (desenho.DataAtualizacao.HasValue)
                                {
                                    <br><small class="text-muted">Atualizado em: @desenho.DataAtualizacao?.ToString("dd/MM/yyyy")</small>
                                }
                            </p>
                        </div>

                        <div class="card-footer">
                            <form asp-controller="Desenho" asp-action="Detalhes" asp-route-id="@desenho.Id" method="get" class="d-inline">
                                <button type="submit" class="btn btn-sm btn-success">Detalhes</button>
                            </form>
                        </div>
                    </div>
                </div>
            }
        }
    }
</div>