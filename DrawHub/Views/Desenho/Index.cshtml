@model IEnumerable<DrawHub.Models.Desenho>

@{
    ViewData["Title"] = "Desenhos";
}

<div class="container-fluid py-4 desenhos-pagina">

    <!-- Cabeçalho -->
    <div class="row mb-5">
        <div class="col-12 text-center">
            <h1 class="display-4 fw-bold mb-3 desenhos-titulo">Galeria de Desenhos</h1>
            <p class="lead text-muted">Explore os incríveis trabalhos da nossa comunidade de artistas</p>
        </div>
    </div>

    <div class="row g-4">

        <!-- Se houver desenhos, entra aqui -->
        @if (Model != null && Model.Any())
        {
            @foreach (var desenho in Model)
            {
                <!-- Se o desenho NÃO for privado, entra aqui -->
                if (!desenho.Privacidade)
                {
                    <div class="col-xl-3 col-lg-4 col-md-6 mb-4">

                        <!-- Card -->
                        <div class="card shadow-sm border-0 desenho-card">

                            <!-- Topo (Desenho) -->
                            @if (!string.IsNullOrEmpty(desenho.ImagemCaminho))
                            {
                                <div class="desenho-imagem-container">
                                    <img src="@desenho.ImagemCaminho" alt="@desenho.Titulo" class="card-img-top desenho-img" />
                                </div>
                            }
                            else
                            {
                                <div class="desenho-imagem-container bg-light">
                                    <div class="d-flex align-items-center justify-content-center h-100">
                                        <i class="fas fa-image fa-3x text-muted"></i>
                                    </div>
                                </div>
                            }

                            <!-- Corpo -->
                            <div class="card-body d-flex flex-column">

                                <!-- Título -->
                                <h5 class="card-title fw-bold text-dark mb-2 desenho-titulo">@desenho.Titulo</h5>

                                <!-- Descrição -->
                                <p class="card-text text-secondary flex-grow-1 desenho-descricao">
                                    @(desenho.Descricao?.Length > 100 ? desenho.Descricao.Substring(0, 100) + "..." : desenho.Descricao)
                                </p>

                                <div class="mt-auto">
                                    <!-- Nome do Artista -->
                                    <div class="d-flex align-items-center text-muted small mb-2">
                                        <i class="fas fa-user me-2"></i>
                                        <span>@desenho.Usuario.Nome</span>
                                    </div>

                                    <!-- Datas -->
                                    <div class="d-flex justify-content-between text-muted small">

                                        <!-- Data de Envio -->
                                        <div>
                                            <i class="fas fa-calendar me-1"></i>
                                            <span>@desenho.DataEnvio?.ToString("dd/MM/yyyy")</span>
                                        </div>

                                        <!-- Data de Atualização (se houver) -->
                                        @if (desenho.DataAtualizacao.HasValue)
                                        {
                                            <div>
                                                <i class="fas fa-sync-alt me-1"></i>
                                                <span>@desenho.DataAtualizacao?.ToString("dd/MM/yyyy")</span>
                                            </div>
                                        }
                                    </div>
                                </div>
                            </div>

                            <!-- Botão de Ver Detalhes-->
                            <div class="card-footer border-0 bg-transparent pt-0">
                                <a asp-controller="Desenho" asp-action="Detalhes" asp-route-id="@desenho.Id" class="btn w-100 desenho-btn">
                                    <i class="fas fa-eye me-2"></i>Ver Detalhes
                                </a>
                            </div>
                        </div>
                    </div>
                }
            }
        }
        else
        {
            <!-- Se não houver desenhos, entra aqui -->
            <div class="col-12 text-center py-5">
                <div class="sem-conteudo">
                    <i class="fas fa-palette fa-4x text-muted mb-4"></i>

                    <h3 class="text-muted mb-3">Nenhum desenho encontrado</h3>

                    <p class="text-muted mb-4">Seja o primeiro a compartilhar seu trabalho com a comunidade!</p>

                    <a asp-controller="Desenho" asp-action="Criar" class="btn btn-lg desenho-btn-vazio">
                        <i class="fas fa-plus me-2"></i>Publicar Primeiro Desenho
                    </a>
                </div>
            </div>
        }
    </div>
</div>