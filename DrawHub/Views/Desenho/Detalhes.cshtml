@model DrawHub.ViewModels.DetalhesDesenhoViewModel

@{
    ViewData["Title"] = "Detalhes do Desenho";
}

<div class="container py-4">
    <div class="row">
        <!-- Imagem -->
        <div class="col-lg-8 mb-4">
            <div class="card shadow-lg border-0 rounded-3">
                <div class="card-body p-0">
                    <div class="d-flex justify-content-center align-items-center bg-dark rounded-3" style="min-height: 70vh;">
                        <img src="@Model.Desenho.ImagemCaminho" class="img-fluid" alt="@Model.Desenho.Titulo" style="max-height: 75vh; width: auto; object-fit: contain;">
                    </div>
                </div>
            </div>
        </div>

        <!-- Detalhes -->
        <div class="col-lg-4">
            <div class="card shadow-lg border-0 rounded-3 h-100">
                <div class="card-body d-flex flex-column p-4">

                    <!-- Privacidade -->
                    <div class="mb-3">
                        <span class="badge @(Model.Desenho.Privacidade ? "bg-warning" : "bg-success") px-3 py-2 rounded-pill fs-6">
                            <i class="fas @(Model.Desenho.Privacidade ? "fa-lock" : "fa-globe") me-2"></i>
                            @(Model.Desenho.Privacidade ? "Privado" : "Público")
                        </span>
                    </div>

                    <!-- Título -->
                    <h1 class="display-6 fw-bold text-dark mb-3" >@Model.Desenho.Titulo</h1>

                    <!-- Artista -->
                    <div class="d-flex align-items-center mb-4 p-3 rounded-3 artista-background">
                        <div class="rounded-circle d-flex align-items-center justify-content-center me-3" style="width: 50px; height: 50px; background: black;">
                            <i class="fas fa-user text-white fs-5"></i>
                        </div>
                        <div>
                            <p class="mb-1 fw-bold fs-5 text-dark">@Model.Desenho.Usuario.Nome</p>
                            <small class="text-white">Artista</small>
                        </div>
                    </div>

                    <div class="mb-4">
                        <div class="row g-2">

                            <!-- Data de Publicação -->
                            <div class="col-12">
                                <div class="p-3 border rounded-3 mb-2" style="border-color: #e9ecef !important;">
                                    <div class="d-flex align-items-center">
                                        <i class="fas fa-calendar me-3" style="color: #2f847c; font-size: 1.2rem;"></i>
                                        <div>
                                            <small class="text-muted d-block">Publicado em</small>
                                            <strong class="text-dark">@Model.Desenho.DataEnvio?.ToString("dd/MM/yyyy")</strong>
                                        </div>
                                    </div>
                                </div>
                            </div>

                            <!-- Categoria -->
                            @if (Model.Desenho.Categoria != null)
                            {
                                <div class="col-12">
                                    <div class="p-3 border rounded-3 mb-2" style="border-color: #e9ecef !important;">
                                        <div class="d-flex align-items-center">
                                            <i class="fas fa-tag me-3" style="color: #2f847c; font-size: 1.2rem;"></i>
                                            <div>
                                                <small class="text-muted d-block">Categoria</small>
                                                <span class="badge" style="background: #2f847c;">@Model.Categoria.Nome</span>
                                            </div>
                                        </div>
                                    </div>
                                </div>
                            }

                            <!-- Data de Atualização -->
                            @if (Model.Desenho.DataAtualizacao != null)
                            {
                                <div class="col-12">
                                    <div class="p-3 border rounded-3" style="border-color: #e9ecef !important;">
                                        <div class="d-flex align-items-center">
                                            <i class="fas fa-sync-alt me-3" style="color: #CC6666; font-size: 1.2rem;"></i>
                                            <div>
                                                <small class="text-muted d-block">Atualizado em</small>
                                                <strong class="text-dark">@Model.Desenho.DataAtualizacao?.ToString("dd/MM/yyyy")</strong>
                                            </div>
                                        </div>
                                    </div>
                                </div>
                            }
                        </div>
                    </div>

                    <!-- Descrição -->
                    <div class="mb-4 flex-grow-1">
                        <h5 class="fw-bold text-dark mb-3 border-bottom pb-2" style="border-color: #2f847c !important;">
                            <i class="fas fa-align-left me-2" style="color: #2f847c;"></i>
                            Descrição
                        </h5>
                        <div class="p-3 rounded-3" style="background: linear-gradient(135deg, #f8f9fa, #e9ecef); min-height: 120px;">
                            <p class="mb-0 text-secondary">
                                @(!string.IsNullOrEmpty(Model.Desenho.Descricao) ? Model.Desenho.Descricao : "Este desenho não possui descrição.")
                            </p>
                        </div>
                    </div>

                    <!-- Botões -->
                    <div class="mt-auto pt-3 border-top" style="border-color: #e9ecef !important;">
                        <div class="d-grid gap-2">
                            @if (Model.Desenho.Usuario.Id == Model.Usuario?.Id)
                            {
                                <a asp-controller="Desenho" asp-action="Editar" asp-route-id="@Model.Desenho.Id" class="btn btn-acao btn-dark btn-lg py-2 rounded-2 fw-bold">
                                    <i class="fas fa-edit me-2"></i>Editar Desenho
                                </a>
                                <a asp-controller="Desenho" asp-action="ConfirmarExclusao" asp-route-id="@Model.Desenho.Id" class="btn btn-acao btn-lg py-2 rounded-2 fw-bold" style="background: crimson; border: none; color: white;">
                                    <i class="fas fa-trash me-2"></i>Excluir Desenho
                                </a>
                            }
                            <a asp-controller="Desenho" asp-action="Index" class="btn btn-outline-secondary btn-lg py-2 rounded-2 fw-bold">
                                <i class="fas fa-arrow-left me-2"></i>Voltar à Galeria
                            </a>
                        </div>
                    </div>
                </div>
            </div>
        </div>
    </div>
</div>