@model DrawHub.ViewModels.DesenhoCategoriaViewModel

@{
    ViewData["Title"] = "Publicar";
}

<div class="container mt-5">
    <h2 class="text-center mb-4">Criar Desenho</h2>

    @if (TempData["MsgErro"] != null)
    {
        <div class="alert alert-danger">@TempData["MsgErro"]</div>
    }

    <form asp-action="Criar" asp-controller="Desenho" method="post" class="border p-4 rounded bg-light shadow-sm" enctype="multipart/form-data">

        <!-- Título -->
        <div class="mb-3">
            <label asp-for="Desenho.Titulo" class="form-label"></label>
            <input asp-for="Desenho.Titulo" class="form-control" placeholder="Digite um título para o desenho" />
            @Html.ValidationMessageFor(x => x.Desenho.Titulo)
        </div>

        <!-- Descrição -->
        <div class="mb-3">
            <label asp-for="Desenho.Descricao" class="form-label"></label>
            <textarea type="textarea" asp-for="Desenho.Descricao" class="form-control" placeholder="Digite uma breve descrição..." rows="3"></textarea>
            @Html.ValidationMessageFor(x => x.Desenho.Descricao)
        </div>

        <!-- Imagem -->
        <div class="mb-3">
            <label asp-for="Desenho.ArquivoImagem" class="form-label">Imagem</label>
            <input asp-for="Desenho.ArquivoImagem" type="file" class="form-control" accept="image/*" />
            @Html.ValidationMessageFor(x => x.Desenho.ArquivoImagem)
        </div>

        <!-- Pré-visualização da imagem -->
        <div class="mb-3 text-center">
            <img id="preview-imagem" src="#" alt="Pré-visualização" class="img-fluid rounded shadow-sm d-none" style="max-height: 200px;" />
        </div>

        <!-- Categorias -->
        <div class="mb-3">
            <label asp-for="CategoriaId" class="form-label">Categorias:</label>
            <select id="categoriaId" name="categoriaId">
                <option value="">Selecione</option>
                @foreach (var categoria in Model.Categorias)
                {
                    <option value="@categoria.Id">@categoria.Nome</option>
                }
            </select><br />
            @Html.ValidationMessageFor(x => x.Desenho.CategoriaId)
        </div>
        

        <!-- Privacidade -->
        <div class="form-check mb-3 mt-5">
            <label asp-for="Desenho.Privacidade" class="form-check-label">Privado</label>
            <input asp-for="Desenho.Privacidade" id="privacidade" type="checkbox" class="form-check-input" />
        </div>

        <button type="submit" class="btn btn-primary">Criar</button>
        <a class="btn btn-secondary" asp-controller="Home" asp-action="Index" role="button">Voltar</a>
    </form>

</div>

@section Scripts {
    <partial name="_ValidationScriptsPartial" />

    <script>
        document.querySelector('input[type="file"]').addEventListener('change', function (e) {
            const file = e.target.files[0];
            if (!file) return;

            const reader = new FileReader();
            reader.onload = function (event) {
                const img = document.getElementById('preview-imagem');
                img.src = event.target.result;
                img.classList.remove('d-none');
            };
            reader.readAsDataURL(file);
        });
    </script>
}