@model IEnumerable<DrawHub.Models.Desenho>

@{
    ViewData["Title"] = "Meus Desenhos";
}

<div class="container-fluid py-4 meus-desenhos-pagina">

    <div class="row mb-5">
        <div class="col-12 text-center">
            <h1 class="display-4 fw-bold mb-3 titulo-meus-desenhos">Meus Desenhos</h1>
            <p class="lead text-muted">Gerencie e visualize todos os seus trabalhos</p>
        </div>
    </div>

    @if (TempData["MsgSucesso"] != null)
    {
        <div class="row mb-4">
            <div class="col-12">
                <div class="alert alert-success alert-dismissible fade show meus-desenhos-alerta" role="alert">
                    <i class="fas fa-check-circle me-2"></i>
                    @TempData["MsgSucesso"]
                    <button type="button" class="btn-close" data-bs-dismiss="alert" aria-label="Close"></button>
                </div>
            </div>
        </div>
    }

    <div class="row g-4">
        @if (Model != null && Model.Any())
        {
            @foreach (var desenho in Model)
            {
                <div class="col-xl-3 col-lg-4 col-md-6 mb-4">
                    <div class="card h-100 shadow-sm border-0 meus-desenhos-card">

                        @if (!string.IsNullOrEmpty(desenho.ImagemCaminho))
                        {
                            <div class="meus-desenhos-imagem-container">
                                <img src="@desenho.ImagemCaminho" alt="@desenho.Titulo" class="card-img-top meus-desenhos-img" />
                                <div class="meus-desenhos-overlay"></div>

                                <div class="position-absolute top-0 end-0 m-2">
                                    <span class="badge @(desenho.Privacidade ? "bg-warning" : "bg-success") px-2 py-1 rounded-pill">
                                        <i class="fas @(desenho.Privacidade ? "fa-lock" : "fa-globe") me-1"></i>
                                        @(desenho.Privacidade ? "Privado" : "Público")
                                    </span>
                                </div>
                            </div>
                        }
                        else
                        {
                            <div class="meus-desenhos-image-container bg-light">
                                <div class="d-flex align-items-center justify-content-center h-100">
                                    <i class="fas fa-image fa-3x text-muted"></i>
                                </div>
                                <div class="meus-desenhos-overlay"></div>
                            </div>
                        }

                        <div class="card-body d-flex flex-column">
                            <h5 class="card-title fw-bold text-dark mb-2 meus-desenhos-titulo">@desenho.Titulo</h5>
                            <p class="card-text text-secondary flex-grow-1 meus-desenhos-descricao">
                                @(desenho.Descricao?.Length > 100 ? desenho.Descricao.Substring(0, 100) + "..." : desenho.Descricao)
                            </p>

                            <div class="mt-auto">
                                <div class="d-flex justify-content-between text-muted small meus-desenhos-datas">
                                    <div>
                                        <i class="fas fa-calendar me-1"></i>
                                        <span>@desenho.DataEnvio?.ToString("dd/MM/yyyy")</span>
                                    </div>
                                    @if (desenho.DataAtualizacao.HasValue)
                                    {
                                        <div>
                                            <i class="fas fa-sync-alt me-1"></i>
                                            <span>@desenho.DataAtualizacao?.ToString("dd/MM/yyyy")</span>
                                        </div>
                                    }
                                </div>
                            </div>
                        </div>

                        <div class="card-footer border-0 bg-transparent pt-0">
                            <div class="d-grid gap-2">
                                <a asp-controller="Desenho" asp-action="Detalhes" asp-route-id="@desenho.Id" class="btn btn-sm meus-desenhos-btn-detalhes">
                                    <i class="fas fa-eye me-1"></i>Detalhes
                                </a>
                                <div class="d-flex gap-2">
                                    <a asp-controller="Desenho" asp-action="Editar" asp-route-id="@desenho.Id" class="btn btn-dark btn-sm flex-fill meus-desenhos-btn-editar">
                                        <i class="fas fa-edit me-1"></i>Editar
                                    </a>
                                    <a asp-controller="Desenho" asp-action="ConfirmarExclusao" asp-route-id="@desenho.Id" class="btn btn-danger btn-sm flex-fill meus-desenhos-btn-excluir">
                                        <i class="fas fa-trash me-1"></i>Excluir
                                    </a>
                                </div>
                            </div>
                        </div>
                    </div>
                </div>
            }
        }
        else
        {
            <div class="col-12 text-center py-5">
                <div class="sem-conteudo">
                    <i class="fas fa-palette fa-4x text-muted mb-4"></i>
                    <h3 class="text-muted mb-3">Você ainda não tem desenhos</h3>
                    <p class="text-muted mb-4">Comece a compartilhar seus trabalhos com a comunidade!</p>
                    <a asp-controller="Desenho" asp-action="Criar" class="btn btn-lg meus-desenhos-btn-criar">
                        <i class="fas fa-plus me-2"></i>Enviar Primeiro Desenho
                    </a>
                </div>
            </div>
        }
    </div>
</div>